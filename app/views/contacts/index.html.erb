<p id="notice"><%= notice %></p>
<h1><b>Contacts</b></h1>
<hr>
<label>Filter By Name: </label>
  <input type="text" id = "name" name="name" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name" >
<table id="myTable" class="table table-striped">
  <thead>
    <tr>
      <th>ID </th>
      <th>Fist name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>
        <td><%= contact.fist_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td><%= contact.created_at %></td>
        <td><button type="button" class="btn"><%= link_to 'Edit', edit_contact_path(contact) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-primary"><%= link_to 'New Contact', new_contact_path %></button>
<button type="button" class="btn btn-danger"><%= link_to "Destroy All contacts", destroyer_contact_path(10000) %></button>


