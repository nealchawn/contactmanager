<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>
<label>Filter By Name: </label>
  <input type="text" id = "name" name="name" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name" >
<table id="myTable">
  <thead>
    <tr>
      <th>ID </th>
      <th>Fist name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>
        <td><%= contact.fist_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td><%= contact.created_at %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>
<%= link_to "Destroy All contacts", destroyer_contact_path(10000) %>


